<li id="post-<%= post.id %>">
  <div class="row-fluid">
    <figure class="<%= "col-sm-5" if post.picture? %>">
      <%= link_to image_tag(post.picture.url(:medium), class: "img"), post %>
    </figure>
    <div class="<%= post.picture? ? "col-sm-7" : "col-sm-12" %>">
      <% unless post.published %>
        <p class="text-center unpublished row">--Unpublished--</p>
      <% end %>
      <span class="h2 title"><%= link_to post.title, post %></span>
      <span class="timestamp">
        <%= post.created_at.to_date.to_formatted_s :long %>
      </span>
        <div class="body">
          <%= strip_tags RedCloth.new(post.body).to_html.truncate(255, separator: ' ') %>
        </div>
        <% if post.labels.any? %>
          <span class="labels text-right">
            <% post.labels.each do |label| %>
              <%= link_to label.name, label, class: "btn" %>
            <% end %>
          </span>
        <% end %>
      </span>
    </div>
  </div>
</li>
