<li id="section-<%= section.id %>">
  <div>
    <% if section.title? %>
      <div class="h2 title"><%= section.title %></div>
    <% end %>
    <div>
      <% if section.picture? %>
        <figure class="image">
          <%= link_to image_tag(section.picture.url, class: "img"), section.picture.url %>
          <figcaption class="text-center"><%= section.picture_caption %></figcaption>
        </figure>
      <% end %>
      <div class="section-body">
        <%= RedCloth.new(section.body).to_html.html_safe %>
      </div>
    </div>
  </div>
</li>
