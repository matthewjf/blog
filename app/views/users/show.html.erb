<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if current_user?(@user) %>
        <p><%= link_to "edit", edit_user_path(current_user) %></p>
      <% end %>
    </section>
  </aside>
</div>
