<%= form_for [ @post, @comment ] do |f| %>
<div class="row">
  <div class="col-md-6 col-sm-8 col-lg-5 centered">
    <%= render 'shared/error_messages', object: f.object %>
    <div class="comment">
      <span>
        <%= f.label :body, 'Post a comment' %><br/>
        <%= f.text_area :body, rows: 3, class: 'form-control field-group' %>
      </span>
      <span>
        <%= f.submit 'Submit', class: "btn btn-primary" %>
      </span>
    </div>
  </div>
</div>
<% end %>
