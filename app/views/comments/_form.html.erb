<%= form_for [ @post, @comment ] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <span class="comment">
    <p>
      <%= f.label :body, 'Post a comment' %><br/>
      <%= f.text_area :body, class: 'form-control field-group' %>
    </p>
    <p>
      <%= f.submit 'Submit', class: "btn btn-primary" %>
    </p>
  </span>
<% end %>
