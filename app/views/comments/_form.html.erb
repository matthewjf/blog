<%= form_for [ @post, @comment ] do |f| %>
<div class="row">
  <div class="col-md-6 col-sm-7 col-lg-5 centered">
    <%= render 'shared/error_messages', object: f.object %>
    <div class="comment">
      <% if logged_in? %>
        <span>
          <%= f.label :body, 'Post a comment' %><br/>
          <%= f.text_area :body, rows: 3, class: 'form-control field-group' %>
        </span>
        <span>
          <%= f.submit 'Submit', class: "btn btn-primary" %>
        </span>
      <% else %>
        <p class="text-center">
          <%= link_to "Log in", login_path %>
          or
          <%= link_to "Sign up", signup_path %>
          to add a comment
        </p>
      <% end %>
    </div>
  </div>
</div>
<% end %>
