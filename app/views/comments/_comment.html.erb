<li id="comment-<% comment.id %>">
  <div class="row">
    <div class="col-sm-10 col-md-9 col-lg-8 centered">
      <div class="row comment">
      <div class="text-sm-right col-sm-4 col-md-3">
        <div class="author"><%= User.find_by(comment.user_id).name %></div>
        <div class="timestamp">
          <%= time_ago_in_words(comment.created_at) %> ago
        </div>
      </div>
      <div class="col-sm-8 col-md-9">
        <%= simple_format comment.body %>
      </div>
    </div>
    </div>
  </div>
</li>
